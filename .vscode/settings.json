{
    "files.autoSave": "afterDelay",
    "editor.minimap.enabled": false,
    "files.exclude": {
        "**/.git": false,
        "**/.gitignore": false,
        "**/.vscode": false,
        "**/tsconfig.json": false,
        "**/tslint.json": false,
        "**/package-lock.json": true,
	    "**/js": true,
        "**/node_modules": true,
        "**/*.js.map": true,
        "**/*.npmrc": true
    },
    "spellright.notificationClass": "information",
    "spellright.language": [
        "hu"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "typescript"
    ]
}